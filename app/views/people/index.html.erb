<%= link_to "Add Person", new_person_path, class: "pull-right" %>
<h1>Staff</h1>

<table class="table">
  <thead>
  <tr>
    <th>Name</th>
    <th>Locations</th>
  </tr>
  </thead>
  <tbody>
  <% @people.each do |person| %>
    <tr>
      <td>
        <%= link_to "#{person.title} #{person.first_name} #{person.last_name}", person_path(person)  %>
      </td>
      <td>
        <%= link_to person.assignments.count, person_path(person) %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
